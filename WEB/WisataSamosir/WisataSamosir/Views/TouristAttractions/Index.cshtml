@{
    ViewData["Title"] = "dashboard";
    Layout = "_Layout";
}
<div class="col-lg-12">
    <button type="button" class="btn btn-primary mt-2 mb-2 pl-5 pr-5" onclick="AddTour()">Add Destination</button>
</div>
<div class="container mt-5 p-2 border">
    <table class="table table-striped table-hover" id="dataTable">
        <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Location</td>
                <td>Description</td>
                <td>Category</td>
                <td>Action</td>
            </tr>
        </thead>

    </table>
</div>

<h1 style="margin:20px">Food and Souvenir Destination </h1>
<div class="container mt-5 p-2 border">
    <table class="table table-striped table-hover" id="dataTable_food">
        <thead>
            <tr>
                <td></td>
                <td>Name</td>
                <td>Location</td>
                <td>Description</td>
                <td>Category</td>
                <td>Action</td>
            </tr>
        </thead>

    </table>
</div>


<div class="modal" tabindex="-1" role="dialog" id="tour">
    <div class="modal-dialog modal-lg" role="document">
        <form id="form_tour"  class="needs-validation" novalidate>
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" name="name" id="name" placeholder="Name Tour or Food Destination" required />
                                <input type="hidden" class="form-control" name="id" id="id" />
                                <input type="hidden" name="id_account" id="id_account" value="@ViewBag.Id" />
                                <div class="invalid-feedback" id="message_name">

                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Location</label>
                                <input type="text" class="form-control" name="location" id="location" placeholder="Location" required />
                                <div class="invalid-feedback" id="message_location">

                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 password">
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" name="description" id="description" placeholder="Description" required />
                                <div class="invalid-feedback" id="message_description">

                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Category</label>
                                <select class="custom-select" id="category" required>
                                    <option selected disabled value="">...</option>
                                    <option value="0">Social Culture</option>
                                    <option value="1">Natural Tourism</option>
                                    <option value="2">Food</option> 
                                    <option value="3">Hotel</option>
                                </select>
                            </div>
                        </div>
                    </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit" id="SubmitInsert">Add</button>
                    <button class="btn btn-primary" type="submit" id="SubmitUpdate" onclick="SubmitUpdateAccount()">Update</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>


</div>
@section Scripts{
    <script src="~/tourist_attraction/index.js" asp-append-version="true"></script>
}